{
  "name": "node-js-getting-started",
  "version": "0.1.2",
  "description": "A sample Node.js app using Express 4",
  "main": "index.js",
  "scripts": {
    "start": "node index.js"
  },
  "browser": {
    "jquery": "./jquery.js"
  },
  "browserify-shim": {
    "jquery": "$"
  },
  "browserify": {
    "transform": [ "browserify-shim" ]
  },
  "dependencies": {
    "pg": "4.x",
    "express": "~4.9.x",
    "squel": "3.x",
    "isvalid-express": "0.x",
    "moment": "2.9.x",
    "baconjs": "~0.7",
    "bacon.jquery": "~0.4",
    "watchify": "2.4.x",
    "pikaday": "1.3.x"
  },
  "devDependencies": {
    "jshint": "2.6.x",
    "browserify": "~9",
    "browserify-shim": "~3.8"
  },
  "scripts": {
    "preinstall": "curl http://code.jquery.com/jquery-2.1.3.min.js>jquery.js",
    "jshint": "jshint *.js client/*.js",
    "build-js": "browserify --debug client/index.js > public/bundle.js",
    "watch-js": "watchify --debug client/index.js -do public/bundle.js"
  },
  "engines": {
    "node": "0.10.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heroku/node-js-getting-started"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "license": "MIT"
}
